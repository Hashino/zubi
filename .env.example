# Smart Contract Environment Variables
# Copy this file to .env and fill in your values

# REQUIRED: Your wallet private key (without 0x prefix)
# WARNING: Never commit this file with real values!
PRIVATE_KEY=your_private_key_here

# REQUIRED: Governance wallet that will receive protocol fees
GOVERNANCE_WALLET=0xYourGovernanceWalletAddress

# Optional: Your deployer address (for verification)
DEPLOYER_ADDRESS=0xYourDeployerAddress

# RPC URLs (default public endpoints provided, but recommended to use your own)
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com/
POLYGON_RPC_URL=https://polygon-rpc.com/

# Polygonscan API key for contract verification
# Get yours at: https://polygonscan.com/apis
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# Deployed contract address (filled automatically after deployment)
ESCROW_CONTRACT_ADDRESS=
